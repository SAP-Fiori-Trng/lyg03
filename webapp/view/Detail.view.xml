<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:fm="sap.ui.layout.form"
    controllerName="dw.fiori.trng.lyg03.controller.Detail">
    <f:DynamicPage showFooter="true"
        id="dynamicPageId"
        headerExpanded="{device>/system/desktop}"
        busyIndicatorDelay="0">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title
                        text="{
                            parts: [{path: 'ID'},{path: 'Name'}],
                            formatter: '.formatter.jonitDetailTitle'
                        }"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <FlexBox
                    alignItems="Start"
                    justifyContent="SpaceBetween">
                    <Panel backgroundDesign="Transparent">
                        <ObjectAttribute title="Product ID" />
                        <ObjectStatus text="{ID}" />
                    </Panel>
                    <Panel backgroundDesign="Transparent">
                        <ObjectNumber id="objectHeader" textAlign="End"
                            unit="PC"                            
                            state="{
                                path: 'Rating',
                                formatter: '.formatter.quantityState'}"
                            number="{
                                path: 'Rating',
                                formatter: '.formatter.numberUnit'}">
                        </ObjectNumber>
                        <ProgressIndicator
                            width="16rem"
                            percentValue="{Rating}"
                            displayValue="{Rating}"
                            showValue="true"
                            state="{
                                path: 'Rating',
                                formatter: '.formatter.quantityState'}" />
                    </Panel>
                </FlexBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Panel>
                <content>
                    <fm:SimpleForm
                        id="supplierSimpleFormId"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        title="Product Detail"
                        labelSpanXL="4"
                        labelSpanM="6"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        columnsXL="2"
                        columnsM="2"
                        singleContainerFullSize="false">
                        <fm:content>
                            <core:Title text="Supplier Basic Info" />
                            <Label text="Product Name" />
                            <Input
                                value="{Name}"
                                editable="{viewModel>/bEditState}">
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M6 S12" />
                                </layoutData>
                            </Input>
                            <Label text="Product Description" />
                            <Input
                                value="{Description}"
                                editable="{viewModel>/bEditState}">
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M6 S12" />
                                </layoutData>
                            </Input>
                        </fm:content>
                    </fm:SimpleForm>
                </content>
            </Panel>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Edit"
                    visible="{=!${viewModel>/bEditState}}"
                    press="handleEditPress"/>
                <Button
                    type="Accept"
                    text="Save"
                    visible="{viewModel>/bEditState}"
                    press="handleSavePress"/>
                <Button
                    text="Cancel"
                    visible="{viewModel>/bEditState}"
                    press="handleCancelPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>